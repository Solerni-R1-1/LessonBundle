{% extends 'IcapLessonBundle:Lesson:layout.html.twig' %}

{% block lesson_content %}

    <h1 class="lesson-title">{{ _resource.name }}</h1>
    <br/>
    {{ macros.flashBox() }}

    <div class="row">

        <div class="col-md-3">

            {#{{ tree | json_encode | raw }}#}
            {% include 'IcapLessonBundle:Lesson:viewChild.html.twig' %}
            <br/>
            <div class="btn-group pull-right">

                {% if chapter is defined and chapter != null %}
                    <a href="{{ path('icap_lesson_choice_move_chapter', { 'resourceId': _resource.id, 'chapterId': chapter.id })}}" class="btn"><i class="icon-ambulance"></i></a>
                    <a href="{{ path('icap_lesson_new_chapter', { 'resourceId': _resource.id, 'parentChapterId': parent.id })}}" class="btn"><i class="icon-plus"></i></a>
                    <a href="{{ path('icap_lesson_edit_chapter', { 'resourceId': _resource.id, 'chapterId': chapter.id })}}" class="btn"><i class="icon-edit"></i></a>
                    <a href="{{ path('icap_lesson_confirm_delete_chapter', { 'resourceId': _resource.id, 'chapterId': chapter.id })}}" class="btn"><i class="icon-trash"></i></a>
                {% else %}
                    <a href="{{ path('icap_lesson_new_chapter_without_parent', { 'resourceId': _resource.id })}}" class="btn"><i class="icon-plus"></i></a>
                {% endif %}

            </div>

        </div>

        {% if chapter is defined and chapter != null %}
            <div class="col-md-9">{{ chapter.text }}</div>
        {% else %}
            <div class="col-md-9">{{ 'Welcome to the module course creation'|trans({}, 'icap_lesson') }}</div>
        {% endif %}

    </div>

{% endblock %}
