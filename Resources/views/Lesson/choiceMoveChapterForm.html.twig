<div class='panel-heading chapter_title'><h4>{{ 'Chapter Move'|trans({}, 'icap_lesson') }}</h4></div>
<form id='move_form_nojs' method="POST" action="{{ path('icap_lesson_move_chapter', { 'resourceId': _resource.id, 'chapterId': chapter.id }) }}" class="form-horizontal">
    <fieldset>
        <div class='chapter_content'>
        <div class="control-group">
{#            <label class="control-label" for="icap_lesson_chaptertype_title">{{ 'Title'|trans({}, 'icap_lesson') }}</label>#}
            <div class="controls">
                {{ form_widget(form.title) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="icap_lesson_movechaptertype_choiceChapter">{{ 'move_destination'|trans({}, 'icap_lesson') }}</label>
            {{ form_widget(form.choiceChapter) }}
            <label class="control-label" for="icap_lesson_movechaptertype_brother">{{ 'same_level'|trans({}, 'icap_lesson') }}</label>
            {{ form_widget(form.brother) }}
        </div>
        {{ form_rest(form) }}
        </div>
    </fieldset>
    {{ macros.flashBox() }}
    <br/>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">{{ 'Ok'|trans({}, 'icap_lesson') }}</button>
        <a href="{{ path('icap_lesson_chapter', { 'resourceId': _resource.id, 'chapterId': chapter.id }) }}"><button type="button" class="btn">{{ 'Cancel'|trans({}, 'icap_lesson') }}</button></a>
    </div>
</form>
